{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "tsbuild",
            "type": "shell",
            "command": "npx tsc --build src/main", // 你的构建命令
            "group": "build",
            
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [],

            "options": {
                "cwd": "${workspaceFolder}/ts/" // 你的工作目录
            }
        },
        {
            "label": "tsbuildcopy",
            "type": "shell",
            "command":  [
                "npx copyfiles -f dist/main/main.js dist/service-worker/sw.js ../wwwroot/;",
                "npx copyfiles -f dist/gen_password/gen_password.js ../wwwroot/gen_password/",

            ],
            
            "dependsOn": "tsbuild",
            "group": {
                "kind": "build",
                "isDefault": false
            },

            "options": {
                "cwd": "${workspaceFolder}/ts/" // 你的工作目录
            }
        },

        {
            "label": "webpack",
            "type": "shell",
            "command":  [
                "npx webpack --mode production;",

            ],
        
            "group": {
                "kind": "build",
                "isDefault": true
            },

            "options": {
                "cwd": "${workspaceFolder}/ts/" // 你的工作目录
            }
        }
    ]
}